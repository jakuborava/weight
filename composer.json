{
    "name": "jakuborava/weight",
    "description": "Weight package for PHP package training",
    "keywords": [
        "jakuborava",
        "weight"
    ],
    "homepage": "https://github.com/jakuborava/weight",
    "license": "MIT",
    "authors": [
        {
            "name": "Jakub Orava",
            "email": "orava@orazi.cz",
            "role": "Developer"
        }
    ],
    "require": {
        "php": "^8.0"
    },
    "require-dev": {
        "friendsofphp/php-cs-fixer": "^3.0",
        "pestphp/pest": "^1.20",
        "spatie/ray": "^1.28"
    },
    "autoload": {
        "psr-4": {
            "Jakuborava\\Weight\\": "src"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Jakuborava\\Weight\\Tests\\": "tests"
        }
    },
    "scripts": {
        "test": "vendor/bin/pest",
        "test-coverage": "vendor/bin/pest --coverage",
        "format": "vendor/bin/php-cs-fixer fix --allow-risky=yes"
    },
    "config": {
        "sort-packages": true,
        "allow-plugins": {
            "pestphp/pest-plugin": true
        }
    },
    "minimum-stability": "dev",
    "prefer-stable": true
}
